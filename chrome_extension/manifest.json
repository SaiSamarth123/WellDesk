{
  "manifest_version": 2,
  "name": "WellDesk",
  "description": "A Chrome extension to manage tasks and improve productivity.",
  "version": "1.0",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.png"
  },
  "icons": {
    "48": "icons/icon.png"
  }
}
